<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://formatsEdit"
        focusComponent="gridLayout">

    <data>
        <instance id="valuesFormatsDc"
                  class="io.jmix.reports.entity.ReportValueFormat">
            <loader id="valuesFormatsDl"/>
        </instance>
    </data>

    <layout spacing="true">
        <gridLayout id="gridLayout" spacing="true" width="700px">
            <columns count="1"/>
            <rows>
                <row>
                    <form id="formatFields" dataContainer="valuesFormatsDc" width="100%">
                        <column>
                            <textField id="valueName" property="valueName" required="true" width="100%"
                                       caption="msg://valuesFormats.name"
                                       requiredMessage="msg://valueNameMsg"/>
                            <comboBox id="formatComboBox" required="true"
                                      caption="msg://valuesFormats.format" width="100%"
                                      property="formatString"
                                      requiredMessage="msg://formatStringMsg"/>
                        </column>
                    </form>
                </row>
                <row>
                    <checkBox id="groovyCheckBox" dataContainer="valuesFormatsDc" property="groovyScript"
                              caption="msg://valuesFormats.groovyScript"
                              align="MIDDLE_LEFT"/>
                </row>
                <row>
                    <vbox id="groovyVBox"
                          visible="false">
                        <hbox width="100%">
                            <label value="msg://valuesFormats.groovyScript"/>
                            <linkButton id="groovyFullScreenLinkButton"
                                        align="MIDDLE_RIGHT"
                                        caption="msg://dataSet.fullScreen"/>
                        </hbox>
                        <sourceCodeEditor id="groovyCodeEditor" height="200px" width="100%"
                                          required="true"
                                          requiredMessage="msg://groovyScriptMsg"
                                          dataContainer="valuesFormatsDc"
                                          property="formatString"
                                          mode="Groovy"/>
                    </vbox>
                </row>
            </rows>
        </gridLayout>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>