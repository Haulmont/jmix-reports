<window xmlns="http://jmix.io/schema/ui/window">

    <!--    <dsContext>-->
    <!--        <datasource id="pieChartDs" class="com.haulmont.reports.entity.charts.PieChartDescription" view="_local"-->
    <!--                    allowCommit="false"/>-->
    <!--        <datasource id="serialChartDs" class="com.haulmont.reports.entity.charts.SerialChartDescription" view="_local"-->
    <!--                    allowCommit="false">-->
    <!--            <collectionDatasource id="seriesDs" property="series" allowCommit="false"/>-->
    <!--        </datasource>-->
    <!--    </dsContext>-->

    <data>
        <instance id="pieChartDc"
                  class="io.jmix.reports.entity.charts.PieChartDescription"
                  fetchPlan="_local"/>
        <instance id="serialChartDc"
                  class="io.jmix.reports.entity.charts.SerialChartDescription"
                  fetchPlan="_local">
            <collection id="seriesDc" property="series"/>
        </instance>
    </data>

    <assign name="width" value="400px"/>
    <assign name="captionWidth" value="200px"/>
    <assign name="typeCaptionWidth" value="195px"/>

    <layout spacing="true">
        <gridLayout width="AUTO" spacing="true">
            <columns count="2"/>
            <rows>
                <row>
                    <label value="msg://AbstractChartDescription.type"
                           align="MIDDLE_LEFT" width="${typeCaptionWidth}"/>
                    <comboBox id="type" width="${width}" required="true" align="MIDDLE_RIGHT"/>
                </row>
                <row>
                    <form id="pieChartFieldGroup" dataContainer="pieChartDc" colspan="2">
                        <column width="${width}" fieldCaptionWidth="${captionWidth}">
                            <field id="pieBandName" property="bandName"/>
                            <field id="titleField" property="titleField"/>
                            <field id="valueField" property="valueField"/>
                            <field id="colorField" property="colorField"/>
                            <field id="units" property="units"/>
                            <field id="showLegend" property="showLegend"/>
                        </column>
                    </form>
                </row>
                <row>
                    <form id="serialChartFieldGroup" dataContainer="serialChartDc" colspan="2">
                        <column width="${width}" fieldCaptionWidth="${captionWidth}">
                            <field id="serialBandName" property="bandName"/>
                            <field id="categoryField" property="categoryField"/>
                            <field id="categoryAxisCaption" property="categoryAxisCaption"/>
                            <field id="categoryAxisLabelRotation" property="categoryAxisLabelRotation"/>
                            <field id="valueAxisCaption" property="valueAxisCaption"/>
                            <field id="valueAxisUnits" property="valueAxisUnits"/>
                            <field id="valueStackType" property="valueStackType"/>
                            <field id="showLegend" property="showLegend"/>
                        </column>
                    </form>
                </row>
                <row>
                    <groupBox id="seriesBox" caption="msg://chartEdit.series" colspan="2">
                        <table id="seriesTable" dataContainer="seriesDc" editable="true" height="200px" width="100%"
                               sortable="false">
                            <actions>
                                <action id="create"/>
                                <action id="remove"/>
                                <action id="up"/>
                                <action id="down"/>
                            </actions>
                            <buttonsPanel>
                                <button action="seriesTable.create"/>
                                <button action="seriesTable.remove"/>
                                <button action="seriesTable.up" icon="CARET_UP" caption=""/>
                                <button action="seriesTable.down" icon="CARET_DOWN" caption=""/>
                            </buttonsPanel>
                            <columns>
                                <column id="order" editable="false"/>
                                <column id="name" editable="true"/>
                                <column id="valueField" editable="true"/>
                                <column id="type" editable="true"/>
                                <column id="colorField" editable="true"/>
                            </columns>
                        </table>
                    </groupBox>
                </row>
                <row>
                    <groupBox caption="msg://chartEdit.jsonConfig" spacing="true" colspan="2">
                        <sourceCodeEditor id="serialJsonConfigEditor"
                                          highlightActiveLine="true"
                                          handleTabKey="true"
                                          showGutter="true"
                                          mode="JavaScript"
                                          width="100%"
                                          contextHelpTextHtmlEnabled="true"
                                          contextHelpText="msg://chartEdit.serialJsonConfigHelp"/>
                        <sourceCodeEditor id="pieJsonConfigEditor"
                                          highlightActiveLine="true"
                                          handleTabKey="true"
                                          showGutter="true"
                                          mode="JavaScript"
                                          width="100%"
                                          contextHelpTextHtmlEnabled="true"
                                          contextHelpText="msg://chartEdit.pieJsonConfigHelp"/>
                    </groupBox>
                </row>
            </rows>
        </gridLayout>
    </layout>
</window>