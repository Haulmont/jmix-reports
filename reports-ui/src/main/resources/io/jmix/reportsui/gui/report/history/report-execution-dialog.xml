<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://report.browser.showExecutions">
    <data>
        <collection id="reportsDc"
                    class="io.jmix.reports.entity.Report"
                    fetchPlan="report.view">
            <loader id="reportsDl"/>
        </collection>
        <collection id="reportGroupsDc"
                    class="io.jmix.reports.entity.ReportGroup"
                    fetchPlan="_local">
            <loader id="reportGroupsDl">
                <query>
                    <![CDATA[select e from report_ReportGroup e]]>
                </query>
            </loader>
        </collection>
    </data>

    <dialogMode width="800px"
                height="480px"
                resizable="true"/>

    <layout expand="reportsTable" spacing="true">
        <grid id="gridFilter" spacing="true">
            <columns count="6"/>
            <rows>
                <row>
                    <label value="msg://io.jmix.reportsui.gui.report.run/report.reportRunFilterName"
                           align="MIDDLE_RIGHT"/>
                    <textField id="filterName"
                               datatype="string"
                               width="250px"/>

                    <label value="msg://io.jmix.reportsui.gui.report.run/report.reportRunFilterCode"
                           align="MIDDLE_RIGHT"/>
                    <textField id="filterCode"
                               width="150px"/>

                    <button id="applyFilterBtn"
                            caption="msg://io.jmix.reportsui.gui.report.run/report.reportFilterButton"
                            align="BOTTOM_LEFT"
                            width="100px"/>
                </row>
                <row>
                    <label value="msg://io.jmix.reportsui.gui.report.run/report.reportRunFilterGroup" align="MIDDLE_RIGHT"/>
                    <lookupField id="filterGroup"
                                 optionsContainer="reportGroupsDc"
                                 width="250px"/>

                    <label value="msg://io.jmix.reportsui.gui.report.run/report.reportRunFilterUpdatedDate"
                           align="MIDDLE_RIGHT"/>
                    <dateField id="filterUpdatedDate"
                               datatype="date"
                               resolution="DAY"
                               width="150px"/>

                    <button id="clearFilterBtn"
                            caption="msg://io.jmix.reportsui.gui.report.run/report.reportClearButton"
                            align="BOTTOM_LEFT"
                            width="100px"/>
                </row>
            </rows>
        </grid>

        <groupTable id="reportsTable"
                    dataContainer="reportsDc"
                    multiselect="true"
                    editable="false"
                    width="100%">
            <actions>
                <action id="executionHistoryAction"/>
            </actions>
            <columns>
                <column id="group"/>
                <column id="locName"/>
                <column id="description"/>
                <column id="code"/>
                <column id="updateTs"/>
            </columns>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>