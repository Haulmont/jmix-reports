<fragment xmlns="http://jmix.io/schema/ui/fragment">

    <data>
        <collection id="valuesFormatsDc" class="io.jmix.reports.entity.ReportValueFormat" provided="true"/>
    </data>

    <layout margin="true" spacing="true" expand="valuesFormatsTable">
        <label value="msg://report.valuesFormats" stylename="h2"/>
        <table id="valuesFormatsTable" sortable="true" width="100%"
               dataContainer="valuesFormatsDc"
               reorderingAllowed="false" columnControlVisible="false">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <buttonsPanel>
                <button action="valuesFormatsTable.create"/>
                <button action="valuesFormatsTable.edit"/>
                <button action="valuesFormatsTable.remove"/>
            </buttonsPanel>
            <columns>
                <column id="valueName" caption="msg://valuesFormats.name"/>
                <column id="formatString" caption="msg://valuesFormats.format"/>
            </columns>
        </table>
    </layout>
</fragment>