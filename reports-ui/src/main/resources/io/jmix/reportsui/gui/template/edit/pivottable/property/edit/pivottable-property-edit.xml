<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://pivotTablePropertyEditor">

<!--    <dsContext>-->
<!--        <datasource id="propertyDs" class="com.haulmont.reports.entity.pivottable.PivotTableProperty"-->
<!--                    allowCommit="false"/>-->
<!--    </dsContext>-->

    <data>
        <instance id="propertyDc"
                  class="io.jmix.reports.entity.pivottable.PivotTableProperty">
            <loader id="propertyDl"/>
        </instance>
    </data>

    <dialogMode height="AUTO"
                width="AUTO"
                resizable="true"
                modal="true"/>

    <layout spacing="true" expand="editBox">
        <groupBox id="editBox" showAsPanel="true">
            <fieldGroup id="editGroup" datasource="propertyDc" width="100%">
                <column width="100%">
                    <field property="name" width="337px"/>
                    <field property="caption" width="337px"/>
                    <field property="type" required="true" width="337px"/>
                    <field id="function" property="function" width="355px">
                        <sourceCodeEditor id="sourceCodeEditor"
                                          property="function"
                                          datasource="propertyDs"
                                          editable="true"
                                          mode="JavaScript"
                                          height="300px"
                                          width="100%"/>

                    </field>
                </column>
            </fieldGroup>
        </groupBox>
        <hbox spacing="true" stylename="c-edit-window-actions">
            <button id="windowCommit" action="windowCommit" icon="EDITOR_OK"/>
            <button id="windowClose" action="windowClose" icon="EDITOR_CANCEL"/>
        </hbox>
    </layout>
</window>