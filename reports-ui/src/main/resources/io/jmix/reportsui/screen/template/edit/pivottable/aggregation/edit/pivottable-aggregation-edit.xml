<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://pivotTableAggregationEditor">

    <data>
        <instance id="aggregationDc"
                  class="io.jmix.reports.entity.pivottable.PivotTableAggregation">
            <loader id="aggregationDl"/>
        </instance>
    </data>

    <dialogMode height="500"
                width="600"
                resizable="true"
                modal="true"/>

    <layout spacing="true" expand="editBox">
        <groupBox id="editBox" showAsPanel="true">
            <form id="editGroup" dataContainer="aggregationDc" width="100%">
                <column>
                    <field property="mode" width="337px"/>
                    <field property="caption" width="337px"/>
                    <sourceCodeEditor id="sourceCodeEditor"
                                      property="function"
                                      editable="true"
                                      mode="JavaScript"
                                      width="355px"
                                      height="300px"/>
                </column>
            </form>
        </groupBox>
        <hbox spacing="true" stylename="c-edit-window-actions">
            <button id="windowCommit" action="windowCommit" icon="EDITOR_OK"/>
            <button id="windowClose" action="windowClose" icon="EDITOR_CANCEL"/>
        </hbox>
    </layout>
</window>