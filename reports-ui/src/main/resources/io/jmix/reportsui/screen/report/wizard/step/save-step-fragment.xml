<fragment xmlns="http://jmix.io/schema/ui/fragment"
          messagesPack="io.jmix.reportsui.screen.report.wizard">

    <data>
        <instance id="reportDataDc" class="io.jmix.reports.entity.wizard.ReportData" provided="true">
            <collection id="reportRegionsDc" property="reportRegions" provided="true"/>
        </instance>
    </data>

    <layout expand="groupBox" width="100%">
        <groupBox id="groupBox" expand="props" width="100%">
            <vbox id="props" expand="chartPreviewBox">
                <form dataContainer="reportDataDc" width="100%">
                    <column>
                        <label value="msg://downloadTemplateFile"/>
                        <textField id="outputFileName" colspan="2" caption="msg://outputFileName"
                                   width="100%" required="true" property="templateFileName"
                                   description="msg://outputFileNameHintMsg" maxLength="255">
                            <validators>
                                <custom bean="report_OutputFileNameValidator"/>
                            </validators>
                        </textField>
                        <comboBox id="outputFileFormat" caption="msg://outputFileFormat"
                                  required="true" colspan="2" width="100%"
                                  property="outputFileType" description="msg://outputFileTypeHintMsg"/>
                        <comboBox id="diagramType" caption="msg://diagramType"
                                  required="true" colspan="2" width="100%" visible="false"/>
                    </column>
                    <column>
                        <button id="downloadTemplateFile" stylename="link"
                                description="msg://templateHintMsg"/>
                    </column>
                </form>
                <vbox id="chartPreviewBox" visible="false">
                </vbox>
            </vbox>
        </groupBox>
    </layout>
</fragment>
