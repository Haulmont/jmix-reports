<window xmlns="http://jmix.io/schema/ui/window">

    <data>
        <instance id="reportDataDc" class="io.jmix.reports.entity.wizard.ReportData">
            <collection id="reportRegionsDc" property="reportRegions">
                <collection id="regionPropertiesDc" property="regionProperties"/>
            </collection>
        </instance>

        <collection id="groupsDc" class="io.jmix.reports.entity.ReportGroup" fetchPlan="_local">
            <loader id="groupsDl">
                <![CDATA[ select rg from report_ReportGroup rg order by rg.createTs asc ]]>
            </loader>
        </collection>
    </data>

    <dialogMode width="800"/>

    <layout expand="editAreaVbox" spacing="true">
        <label id="tipLabel"
               stylename="report-wizard-tip-label"
               width="100%"/>

        <vbox id="editAreaVbox">
            <groupBox id="editAreaGroupBox" width="100%" height="100%">
                <fragment id="detailsFragment" screen="report_FirstDetails.fragment"
                          width="100%" height="100%"
                          visible="false"/>
                <fragment id="saveFragment" screen="report_Save.fragment"
                          width="100%" height="100%"
                          visible="false"/>
            </groupBox>
            <frame src="/io/jmix/reportsui/screen/report/wizard/step/intermediate-regions-frame.xml"
                   id="regionsStep"
                   width="100%" height="100%"
                   visible="false"/>
        </vbox>
        <buttonsPanel id="navBtnsPanel">
            <button id="bwd" caption="msg://backward" icon="icons/report-wizard-previous.png"/>
            <button id="fwd" caption="msg://forward" icon="icons/report-wizard-next.png"/>
            <button id="save" caption="msg://save" visible="false" icon="EDITOR_OK"/>
        </buttonsPanel>
    </layout>
</window>