<fragment xmlns="http://jmix.io/schema/ui/fragment"
          messagesPack="io.jmix.reportsui.screen.report.wizard">

    <layout width="100%" expand="spacer">
        <hbox id="mainFields" width="100%">
            <entityComboBox id="entity" caption="msg://entity" required="true" requiredMessage="msg://fillEntityMsg"
                            description="msg://entityHintMsg" width="100%"/>
            <entityComboBox id="templateFileFormat" caption="msg://templateFileFormat" required="true"
                            requiredMessage="msg://fillTemplateTypeMsg"
                            description="msg://templateTypeHintMsg" width="100%"/>
            <textField id="reportName" caption="msg://reportName" required="true"
                       requiredMessage="msg://fillReportNameMsg"
                       width="100%"/>
            <radioButtonGroup id="reportType" caption="msg://reportBuildType"
                              optionsEnum="io.jmix.reports.entity.ReportType"
                              description="msg://singleMultiEntityHintMsg"
                              descriptionAsHtml="true"/>
            <textArea id="reportQuery" caption="msg://io.jmix.reportsui.screen.report.wizard/reportQuery" width="100%"
                      requiredMessage="msg://io.jmix.reportsui.screen.report.wizard/fillReportQueryMsg"/>
        </hbox>
        <label id="spacer"/>
    </layout>

</fragment>